#include<iostream>

    using namespace std;

int main(){
    int day;
    cout << "Number of day? : ";
    cin >> day;
    if (day < 1 || day > 7){
        cout << "Day from 2 to 8. Re-type: ";
        cin >> day; 
    }  else {
        switch (day) {
            case 1: cout << "Sunday";
            break;
            case 2: cout << "Monday";
            break;
            case 3: cout << "Tuesday";
            break;
            case 4: cout << "Wednesday";
            break;
            case 5: cout << "Thursday";
            break;
            case 6: cout << "Friday";
            break;
            case 7: cout << "Saturday";
            break;
        }
    }
}
